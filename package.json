{
  "name": "vertivortices",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "6.9.0"
  },
  "scripts": {
    "start": "NODE_ENV=development DEBUG=metalsmith:* npm run browser_sync & npm run watch-templates & npm run watch-css & npm run watch-js & npm run copy:dev ",
    "watch-js": "./node_modules/nodemon/bin/nodemon.js  --watch assets/js/ --ext js --exec 'npm run lint:js && npm run js:dev && browser-sync reload'",
    "watch-css": "./node_modules/nodemon/bin/nodemon.js --watch assets/css/ --ext css --exec 'npm run lint:css && npm run styles:dev && browser-sync reload'",
    "watch-templates": "./node_modules/nodemon/bin/nodemon.js  --watch _layouts/ --watch content/ --ext \"md nunj\" --exec 'npm run templates:dev && npm run styles:dev && npm run js:dev && browser-sync reload'",
    "browser_sync": "browser-sync start --server dist --no-ui --no-notify",
    "build:dev": "NODE_ENV=development npm run templates:dev && npm run styles:dev && npm run js:dev",
    "build": "NODE_ENV=production npm run templates && npm run styles && npm run js",
    "styles:dev": "postcss -c postcss.dev.json",
    "styles": "postcss -c postcss.prod.json",
    "js:dev": "./node_modules/rollup/bin/rollup -c",
    "js": "./node_modules/rollup/bin/rollup -c",
    "templates:dev": "NODE_ENV=development DEBUG=metalsmith:* & node build/metalsmith.js",
    "templates": "NODE_ENV=production DEBUG=metalsmith:* & node build/metalsmith.js",
    "publish": "NODE_ENV=production ./node_modules/gh-pages/bin/gh-pages -d dist -b gh-pages",
    "lint:css": "./node_modules/stylelint/bin/stylelint.js assets/css/*.css",
    "lint:js": "./node_modules/standard/bin/cmd.js assets/js/**/*.js",
    "clean:dist": "rm -rf dist",
    "clean:tmp": "rm -rf tmp",
    "clean": "npm run clean:dist && npm run clean:tmp",
    "copy:dev": "rsync -avz --delete assets/fonts/ dist/assets/fonts/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuvilio/vertivortices.git"
  },
  "keywords": [
    "blog",
    "math",
    "cognition"
  ],
  "bugs": {
    "url": "https://github.com/yuvilio/vertivortices/issues"
  },
  "homepage": "https://yuvilio.github.io/vertivortices",
  "author": "yuvilio",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-env": "^1.1.4",
    "babel-preset-es2015-rollup": "^3.0.0",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.9.1",
    "gh-pages": "^0.12.0",
    "metalsmith": "^2.3.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-excerpts": "^1.1.0",
    "metalsmith-in-place": "^2.0.1",
    "metalsmith-layouts": "^1.7.0",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-markdownit": "^0.4.0",
    "metalsmith-metadata": "0.0.4",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-tags": "^2.0.0",
    "metalsmith-watch": "^1.0.3",
    "nunjucks": "^3.0.0",
    "nunjucks-date": "^1.2.0",
    "postcss": "^5.2.8",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^9.0.0",
    "postcss-nested": "^1.0.0",
    "rollup": "^0.39.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "tachyons": "^4.6.1"
  },
  "dependencies": {},
  "browserlist": [
    "last 2 versions",
    "> 5%"
  ]
}
